#compdef dscacheutil

typeset -A opt_args
local context state line

_arguments \
	'-cachedump' \
	'-configuration[print current configuration information]' \
	'-flushcache[flush the entire cache]' \
	'-q[initiate a query]:category:->category'
	'-statistics[print statistics from the cache]'
	#'1: :->account'

case $state in
	category)
		compadd -- 'group' 'host' 'mount' 'protocol' 'rpc' 'service' 'user'
		return 0
		;;
esac
