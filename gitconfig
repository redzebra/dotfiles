[advice]
  statusHints = false
[apply]
	whitespace = nowarn
[branch]
	autosetupmerge = true
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold
[core]
  autocrlf = false
  editor = vim
	excludesfile = ~/.dotfiles/gitignore
[diff]
  mnemonicprefix = true
[format]
  pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[help]
	autocorrect = -1
[init]
	templatedir = ~/.dotfiles/git.template
[merge]
  summary = true
  verbosity = 1
[mergetool]
	keepBackup = true
[push]
	default = tracking
[rerere]
  # Remember my merges.
	enabled = true
